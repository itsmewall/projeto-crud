<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head.ejs') %>
    <body>
        <h1 class="title"><%= title %></h1>

        <%- include('partials/navbar.ejs') %>

        <% if ( typeof message !== 'undefined') { %>
            <%= message%>
        <% } %>

    <form class="form" action="/register/add" method="POST">
        <div>
            <label></label>
            <input class="input" type="text" name="name" placeholder="Digite seu nome">
        </div>
        <div>
            <label></label>
            <input class="input" type="text" name="age" placeholder="Digite sua idade">
        </div>
        <div>
            <label></label>
            <input class="input" type="text" name="email" placeholder="digite seu e-mail">
        </div>
        <div>
            <label></label>
            <input class="input" type="password" name="password" placeholder="digite sua senha">
        </div>
        <button class="button" type="submit">Cadastrar</button>
    </form>

    <script src="js/main.js"></script>
    <%- include('partials/foot.ejs') %>
</body>

</html>