<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head.ejs') %>
    <body>
        <h1><%= title %></h1>

        <%- include('partials/navbar.ejs') %>

        <% if ( typeof message !== 'undefined') { %>
            <%= message%>
        <% } %>

    <form class="form" action="/edit/<%= user._id %>" method="POST">
        <div>
            <label></label>
            <input type="text" name="name" placeholder="Digite seu nome" value="<%= user.name %>">
        </div>
        <div>
            <label></label>
            <input type="text" name="age" placeholder="Digite sua idade" value="<%= user.age %>">
        </div>
        <div>
            <label></label>
            <input type="text" name="email" placeholder="digite seu e-mail" value="<%= user.email %>">
        </div>
        <button type="submit">Editar</button>
    </form>

    <script src="js/main.js"></script>
    <%- include('partials/foot.ejs') %>
</body>

</html>